
<section class="sign-in-page">
   <div class="container">
      <div class="row justify-content-center align-items-center height-self-center">
         <div class="col-lg-7 col-md-12 align-self-center">
            <div class="sign-user_card ">                    
               <div class="sign-in-page-data">
                  <div class="sign-in-from w-100 m-auto">
                     <form class="" action="signup" method="post">
                        <div class="row">
                           <div class="col-md-6">
                              <div class="form-group">
                                 <label for="username">نام کاربری</label>
                                 <input type="text" class="form-control mb-0" id="username" name="username" placeholder="نام کاربری را وارد کنید" autocomplete="off" required>
                              </div>
                           </div>
                           <div class="col-md-6">
                              <div class="form-group">  
                                 <label for="email">ایمیل</label>                               
                                 <input type="email" name="email" class="form-control mb-0" id="email" placeholder="ایمیل را وارد کنید" autocomplete="off" required>
                              </div>
                           </div>
                           <div class="col-md-6">
                              <div class="form-group">  
                                 <label for="mobile">موبایل</label>                               
                                 <input type="tel" name="mobile" class="form-control mb-0" id="mobile" placeholder="ایمیل را وارد کنید" autocomplete="off" required>
                              </div>
                           </div>
                           <div class="col-md-6">
                              <div class="form-group">  
                                 <label for="birthDay">تاریخ تولد</label>                               
                                 <input type="date" name="birthDay" class="form-control mb-0" id="birthDay" placeholder="ایمیل را وارد کنید" autocomplete="off" required>
                              </div>
                           </div>
                           <div class="col-md-6">
                              <div class="form-group">
                                 <label for="name">نام</label>
                                 <input type="text" class="form-control mb-0" name="name" id="name" placeholder="نام" autocomplete="off" required>
                              </div>
                           </div>
                           <div class="col-md-6">
                              <div class="form-group">  
                                 <label for="family">نام خانوادگی</label>                               
                                 <input type="text" class="form-control mb-0" name="family" id="family" placeholder="نام خانوادگی" autocomplete="off" required>
                              </div>
                           </div>
                           <div class="col-md-6">
                              <div class="form-group">   
                                 <label for="password">رمز عبور</label>                              
                                 <input type="password" class="form-control mb-0" name="password" id="password" placeholder="کلمه عبور" required>
                              </div>
                           </div>
                           <div class="col-md-6">
                              <div class="form-group"> 
                                 <label for="rePassword">رمز عبور را تکرار کنید</label>                                
                                 <input type="password" class="form-control mb-0" name="rePassword" id="rePassword" placeholder="کلمه عبور" required>
                              </div>
                           </div>
                           <div class="col-md-6">
                              <div class="form-group"> 
                                 <label for="gender">جنسیت</label>                                
                                 <input type="checkbox" class="form-check mb-0" name="gender" id="gender" placeholder="کلمه عبور" >
                              </div>
                           </div>
                           
                        </div>

                        <button type="submit" class="btn btn-hover my-2">ثبت نام</button>
                                                            
                     </form>
                  </div>
               </div>    
               <div class="mt-3">
                  <div class="d-flex justify-content-center links">
                    قبلاً حساب کاربری دارید؟ <a href="login.html" class="text-primary ml-2">ورود</a>
                  </div>                        
               </div>
            </div>
         </div>
      </div>
   </div>
</section>
